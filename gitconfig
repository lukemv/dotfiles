[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[include]
    path = ~/.gitconfig.d/private
[log]
	decorate = true
[credential]
  helper = cache --timeout=86400
[push]
	default = current
[safe]
    directory = *
[advice]
  skippedCherryPicks = false
[init]
	defaultBranch = main
[alias]
	feat = "!f() { git checkout -b feat-$1; }; f"
