[
  {"key": "shift+left", "command": "workbench.action.previousEditor"},
  {"key": "shift+right", "command": "workbench.action.nextEditor"},
  {"key": "shift+left", "command": "workbench.action.terminal.focusPrevious", "when": "terminalFocus"},
  {"key": "shift+right", "command": "workbench.action.terminal.focusNext", "when": "terminalFocus"},

  // UI toggles
  {"key": "ctrl+b", "command": "workbench.action.toggleSidebarVisibility"},
  {"key": "ctrl+g", "command": "-workbench.action.togglePanel"},
  {"key": "ctrl+g", "command": "workbench.action.togglePanel"},
  {"key": "ctrl+g", "command": "workbench.action.focusPanel", "when": "panelVisible"},
  {"key": "ctrl+g", "command": "workbench.action.toggleMaximizedPanel", "when": "panelVisible && panelFocus"},

  // Editor navigation
  {"key": "ctrl+h", "command": "workbench.action.focusLeftGroup"},
  {"key": "ctrl+l", "command": "workbench.action.focusRightGroup"},
  {"key": "ctrl+k", "command": "workbench.action.focusAboveGroup"},
  {"key": "ctrl+j", "command": "workbench.action.focusBelowGroup"},

  // Panel navigation
  {"key": "ctrl+l", "command": "workbench.action.nextPanelView", "when": "panelFocus"},
  {"key": "ctrl+h", "command": "workbench.action.previousPanelView", "when": "panelFocus"}
]
